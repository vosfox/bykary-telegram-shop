# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
WEBAPP_URL=https://your-railway-app.railway.app

# === AI PROVIDERS CONFIGURATION ===
# Puter.js (FREE) - Приоритет 1
USE_PUTER=true

# OpenProxy - Приоритет 2
# OPENPROXY_API_KEY=your_openproxy_key
# OPENPROXY_BASE_URL=https://api.openproxy.com/v1

# OpenRouter - Приоритет 3  
# OPENROUTER_API_KEY=your_openrouter_key
# OPENROUTER_MODEL=openai/gpt-3.5-turbo
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenAI (BACKUP) - Приоритет 4
OPENAI_API_KEY=your_openai_key

# === INSTRUCTIONS ===
# 1. Puter.js будет использоваться первым (бесплатно)
# 2. Если Puter недоступен, автоматически переключится на OpenAI
# 3. Для быстрого отката закомментируйте USE_PUTER=false
# 4. Всегда держите OPENAI_API_KEY как резерв!